@model IEnumerable<NovelV1._2.Models.DTO.TheLoai>
@{
    ViewBag.Title = "listTheLoai";
    Layout = "~/Areas/Host/Views/Shared/_Layout.cshtml";
}

<div id="content">
    <div class="content-admin content-center" style=" padding-top: 5rem;">
        <div class="table-users">
            <div class="header">Danh Sách Thể Loại</div>
            <table class="table" cellspacing="0">
                <tr>
                    <th>
                        Mã Thể Loại
                    </th>
                    <th>
                        Tên Thể Loại
                    </th>
                    <th></th>
                </tr>
                @foreach (var ele in Model)
                {
                    <tr>
                        <td>
                            @ele.TheLoai_ma
                        </td>
                        <td>
                            @ele.TheLoai_ten
                        </td>
                        <td>
                            <div class="event-button">

                                @* @Html.ActionLink("Sửa", "Edit_TheLoai", new { id = ele.TheLoai_ma })*@
                                <span class="editBtn btn"><a href=" @Url.Action( "Edit_TheLoai", new { id = ele.TheLoai_ma})">Sửa</a></span>
                            </div>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>
