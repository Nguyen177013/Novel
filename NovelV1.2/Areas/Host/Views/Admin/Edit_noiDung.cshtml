@model NovelV1._2.Models.DTO.NoiDungSach

@{
    ViewBag.Title = "Create_NoiDung";
    Layout = "~/Areas/Host/Views/Shared/_Layout.cshtml";
}

<div class="modal-Create-dialog">
    <div class="modal-Create">
        <div class="modal-container">
            <header class="modal-header">
                Sửa Nội Dung
            </header>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Sach_ma)

                <div class="modal-body">
                    <div class="input-container">
                        <label class="control-label" for="">Tên Tập</label>
                        @Html.EditorFor(model => model.NoiDungSach_Ten, new { htmlAttributes = new { @class = "modal-input" } })
                        @Html.ValidationMessageFor(model => model.NoiDungSach_Ten)
                    </div>
                    <div class="input-container">
                        <label class="control-label" for="">Nội Dung</label>
                        @Html.TextAreaFor(model => model.NoiDungSach_NoiDung, new { htmlAttributes = new { @class = "text-Synopsis" },id = "NoiDung" })
                        @Html.ValidationMessageFor(model => model.NoiDungSach_NoiDung)
                    </div>
                    <div class="container-login-btn">
                        <button class="btn-submit" value="Save">
                            Sửa
                        </button>
                    </div>
                </div>
                <div class="right">
                    @Html.ActionLink("Quay Về", "listSach", "Admin", new { @class = "btn-select primary-text" })
                </div>
            }
        </div>
    </div>

</div>
@section jsEditor{
    <script>
        CKEDITOR.replace('NoiDung')
    </script>
}